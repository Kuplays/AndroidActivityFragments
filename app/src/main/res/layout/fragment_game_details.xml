<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_game_image_frag"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_game_title_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="game_title"
        app:layout_constraintStart_toEndOf="@+id/id_game_image_frag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_game_year_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="game_year"
        app:layout_constraintStart_toEndOf="@+id/id_game_image_frag"
        app:layout_constraintTop_toBottomOf="@+id/id_game_title_frag" />

    <TextView
        android:id="@+id/id_game_rating_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="game_rating"
        app:layout_constraintStart_toEndOf="@+id/id_game_image_frag"
        app:layout_constraintTop_toBottomOf="@+id/id_game_year_frag" />

    <TextView
        android:id="@+id/id_game_descr_frag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="game_description"
        app:layout_constraintStart_toEndOf="@+id/id_game_image_frag"
        app:layout_constraintTop_toBottomOf="@+id/id_game_rating_frag"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>